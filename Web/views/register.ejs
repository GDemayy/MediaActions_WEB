<%- include layout.ejs %>


<div class="row">
    <div class="col-lg-4"> </div>
    <div class="col-lg-4 text-center">
        <h1> Upload a picture </h1>
    </div>
    <div class="col-lg-4"> </div>
</div>
<div class="row">
    <div class="container">
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info" >
                <div class="panel-heading">
                    <div class="panel-title">Upload a picture</div>
                </div>
                <div style="padding-top:30px" class="panel-body" >
                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                    <form method ="post" enctype="multipart/form-data" class="form-horizontal">


                      <div class="form-group">
                        <label for="email" class="col-md-3 control-label">Email</label>
                        <div class="col-md-9">
                          <input type="text" class="form-control" name="email" placeholder="Email Address">
                        </div>
                      </div>

                      <div class="form-group">
                        <label for="username" class="col-md-3 control-label">Username</label>
                        <div class="col-md-9">
                          <input type="text" class="form-control" name="username" placeholder="Username">
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="password" class="col-md-3 control-label">Password</label>
                        <div class="col-md-9">
                          <input type="password" class="form-control" name="password" placeholder="Password">
                        </div>
                      </div>


                      <div class="form-group">
                        <label for="passwordConf" class="col-md-3 control-label">Password Confirmation</label>
                        <div class="col-md-9">
                          <input type="password" class="form-control" name="passwordConf" placeholder="Password Confirmation">
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="passwordConf" class="col-md-3 control-label">Image de profil</label>
                        <div class="col-md-9">
                          <input type="file" class="" name="myimage" required="required"/><br>
                        </div>
                      </div>


                        <div class="form-group">
                        <label for="passwordConf" class="col-md-3 control-label">Preference</label>
                        <div class="col-md-9">
                            <select class="custom-select col-md-14 control-label form-inline" id="inlineFormCustomSelect">

                                          <option value="1">Photographer</option>
                                          <option value="2">Journalist</option>
                                </select>
                            </div>
                      </div>



        <div class="form-group">
          <!-- Button -->
          <div class="col-md-offset-3 col-md-9">
            <button type="submit" id="btn-signup" type="button" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Sign Up</button>
            <span style="margin-left:8px;">or</span>
          </div>
        </div>
      </form>
        <div style="border-top: 1px solid #999; padding-top:20px"  class="form-group">

            <div class="col-md-offset-3 col-md-9">
                <form role="form" action="/auth/google" method="get">
                    <button type="submit" class="btn btn-primary">LOGIN with Google</button>
                </form>
            </div>

        </div>
    </div>
  </div>
</div>
</div>

<%- include footer.ejs %>
